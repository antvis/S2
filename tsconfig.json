{
  "compilerOptions": {
    "jsx": "react",

    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "tslib": [
        "/node_modules/tslib/tslib.d.ts"
      ]
    },
    "outDir": "lib",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "packages",
    "s2-site"
  ]
}
