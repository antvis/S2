{
  "name": "s2",
  "private": true,
  "workspaces": [
    "packages/*",
    "s2-site/*"
  ],
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "esm",
    "lib",
    "README.md"
  ],
  "keywords": [
    "antv",
    "s2",
    "spreadsheet",
    "site"
  ],
  "scripts": {
    "build:site": "cd ./packages/site && npm run start",
    "site:start": "cd ./packages/site && npm run start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna run --concurrency 1 --stream precommit"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "pretty-quick â€”-staged"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^4.3.0",
    "@antv/event-emitter": "~0.1.0",
    "@antv/g": "~3.5.0-beta.1",
    "@antv/g-gesture": "~0.1.0-beta.1",
    "@antv/util": "~2.0.4",
    "antd": "^4.10.1",
    "classnames": "^2.2.5",
    "d3-ease": "^1.0.5",
    "install": "^0.13.0",
    "lerna": "^3.22.1",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-angular": "^7.1.2",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.123",
    "@types/node": "^10.12.18",
    "@types/react": "*",
    "@types/react-dom": "*",
    "cpx": "^1.5.0",
    "css-loader": "^2.1.1",
    "d3-dsv": "^1.1.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^3.0.0",
    "jest": "^24.9.0",
    "jest-electron": "^0.1.7",
    "jest-extended": "^0.11.2",
    "jest-less-loader": "^0.1.1",
    "jest-raw-loader": "^1.0.1",
    "jest-url-loader": "^0.1.0",
    "less": "^3.11.1",
    "less-loader": "^4.1.0",
    "lint-staged": "^9.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "rimraf": "^3.0.0",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.0",
    "ts-jest": "^25.4.0",
    "ts-loader": "^5.4.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.2.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "license": "MIT",
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "runner": "jest-electron/runner",
    "testEnvironment": "jest-electron/environment",
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "preset": "ts-jest",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transformIgnorePatterns": [],
    "testRegex": "/__tests__/spreadsheet/.*-spec\\.(tsx|ts|js)?$",
    "transform": {
      "\\.(less|css)$": "jest-less-loader",
      "\\.svg$": "jest-raw-loader"
    }
  }
}
