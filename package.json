{
  "name": "@antv/s2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "antv",
    "S2",
    "s2",
    "@antv/S2",
    "@antv/S2-react",
    "pivot table",
    "table",
    "sheet",
    "spreadsheet"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean -y && rimraf node_modules",
    "clean:lock-file": "rm -rf yarn.lock",
    "core:start": "yarn workspace @antv/s2 test:live",
    "build": "lerna run build --include-dependencies --stream",
    "bundle:size": "lerna run bundle:size --stream",
    "release": "yarn build && lerna publish",
    "test": "lerna run test --stream",
    "test:coverage": "lerna run test:coverage --stream",
    "test:watch": "lerna run test:watch --stream",
    "tsc": "lerna run tsc --stream",
    "site:bootstrap": "cd ./s2-site && yarn --frozen-lockfile",
    "site:start": "cd ./s2-site && yarn start",
    "site:build": "cd ./s2-site && NODE_OPTIONS='--max-old-space-size=4096' yarn site:build",
    "site:clean": "cd ./s2-site && yarn clean",
    "site:deploy": "cd ./s2-site && yarn deploy",
    "site:clear": "cd ./s2-site && yarn rimraf node_modules",
    "lint": "yarn tsc && yarn lint:script && yarn lint:style",
    "lint:script": "eslint . --ext '.js,.jsx,.ts,.tsx'",
    "lint:style": "stylelint packages/**/*.less --syntax less",
    "lint:fix": "yarn lint:fix-script && yarn lint:fix-style",
    "lint:fix-script": "yarn lint:script --fix",
    "lint:fix-style": "yarn lint:style --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r -l",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{less,md,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,tsx,ts}": [
      "eslint --fix"
    ],
    "*.less": [
      "stylelint --syntax less --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rollup/plugin-alias": "^3.1.5",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.9.1",
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "bundlesize": "^0.18.1",
    "conventional-changelog-cli": "^2.1.1",
    "cpx": "^1.5.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "jest-electron": "^0.1.11",
    "jest-extended": "^0.11.5",
    "jest-less-loader": "^0.1.1",
    "jest-raw-loader": "^1.0.1",
    "jest-url-loader": "^0.1.0",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.1.0",
    "less": "^4.1.1",
    "lint-staged": "^11.1.2",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "ora": "^6.0.0",
    "postcss": "^8.3.6",
    "prettier": "2.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^26.5.6",
    "tslib": "^2.3.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.4.3"
  },
  "license": "MIT"
}
