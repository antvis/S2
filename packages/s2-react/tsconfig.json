{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "paths": {
      "@antv/s2": ["s2-core/src/index.ts"],
      "@antv/s2/*":["s2-core/src/*"],
      "@antv/s2/esm/shared": ["s2-core/src/shared/index.ts"],
      "@antv/s2/esm/shared/*": ["s2-core/src/shared/*"],
      "@antv/s2-react-components": ["s2-react-components/src/index.ts"],
      "@/*": ["s2-react/src/*"],
      "tests/*": ["s2-react/__tests__/*"]
    }
  },
  "exclude": ["node_modules", "coverage", "esm", "lib", "dist", "temp"],
  "include": ["src", "./typings.d.ts", "playground", "../../global.d.ts"]
}
