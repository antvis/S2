{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "lib",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}
