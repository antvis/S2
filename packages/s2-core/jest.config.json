{
  "globals": {
    "ts-jest": {
      "diagnostics": {
        "warnOnly": true
      }
    }
  },
  "runner": "jest-electron/runner",
  "testEnvironment": "jest-electron/environment",
  "setupFilesAfterEnv": ["jest-extended", "./__tests__/setup.js"],
  "preset": "ts-jest",
  "clearMocks": true,
  "collectCoverage": false,
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!**/node_modules/**",
    "!**/vendor/**",
    "!**/interface/**",
    "!**/interface.ts"
  ],
  "coverageReporters": ["json", "lcov", "text", "clover", "html"],
  "testRegex": "/__tests__/*.*(-|\\.)spec\\.(tsx|ts|js)?$",
  "transform": {
    "\\.(less|css)$": "jest-less-loader",
    "\\.svg$": "jest-raw-loader"
  },
  "moduleNameMapper": {
    "^@/(.*)": "<rootDir>/src/$1",
    "^tests/(.*)": "<rootDir>/__tests__/$1",
    "^src/(.*)": "<rootDir>/src/$1"
  },
  "transformIgnorePatterns": ["<rootDir>/node_modules/(?!d3)"],
  "testTimeout": 30000
}
